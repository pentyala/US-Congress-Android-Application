<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_legis_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pentyala.hwfinal.LegisDetails"
    android:fadeScrollbars="true"
    android:scrollbars="vertical">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/star"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/f"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginStart="14dp"
        android:id="@+id/imageView4" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/t"
        android:layout_marginStart="22dp"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/w"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_marginStart="18dp"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/common_plus_signin_btn_icon_dark_normal"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/imageView7" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView7"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/gridLayout">



        <TextView
            android:text="Name:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_row="0"
            android:paddingBottom="10dp"
            android:layout_column="0" />
        <TextView
            android:text="Text View"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="0"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView6" />

        <TextView
            android:text="Email:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_row="1"
            android:paddingBottom="10dp"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="1"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView7" />

        <TextView
            android:text="Chamber:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_row="2"
            android:paddingBottom="10dp"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="2"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView8" />

        <TextView
            android:text="Contact:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="3"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="3"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView9" />
        <TextView
            android:text="Start Term:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="4"
            android:layout_column="0" />
        <TextView
            android:text="Text View"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="4"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView10" />
        <TextView
            android:text="End Term:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="5"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="5"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView11" />
        <TextView
            android:text="Term:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="6"
            android:layout_column="0" />
        <ProgressBar
            android:id="@+id/progress"
            android:max="100"
            android:layout_row="6"
            android:scaleY="3"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:layout_width="200dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            />

        <TextView
        android:text="TextView"
        android:maxWidth="200dp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:paddingBottom="10dp"
        android:layout_column="2"
        android:textColor="@color/white"
        android:id="@+id/textView999" />

        <TextView
            android:text="Office:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="7"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView13" />

        <TextView
            android:text="State:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="8"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"            android:layout_height="wrap_content"
            android:layout_row="8"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView14" />
        <TextView
            android:text="Fax:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="9"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:maxWidth="200dp"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView15" />
        <TextView
            android:text="Birthday:"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:layout_row="10"
            android:layout_column="0" />
        <TextView
            android:text="TextView"
            android:gravity="right"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:paddingBottom="10dp"
            android:layout_column="2"
            android:id="@+id/textView16" />

    </GridLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/r"
        android:id="@+id/imageView8"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignStart="@+id/imageView7" />

</RelativeLayout>
</ScrollView>